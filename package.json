{
  "name": "saksoff5th-api",
  "version": "1.0.0",
  "description": "saksoff5th typescript express demo api",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "cd ./dist && node ./src/app.js",
    "dev": "nodemon .",
    "prebuild": "tsc --version && rm -rf ./dist",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "postbuild": "cp ormconfig.prod.json ./dist/ormconfig.json && cp .env.prod ./dist/.env && cp -r node_modules ./dist/node_modules && cd ./dist && node --require ts-node/register --require tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "typeorm": "node --require ts-node/register --require tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migration:run": "npm run typeorm migration:run",
    "fixtures:run": "fixtures ./src/database/fixtures --config ./ormconfig.json --require=ts-node/register --require=tsconfig-paths/register --debug"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tartexs/saksoff5th_api.git"
  },
  "author": "Cristian Tardivo",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.910.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^3.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "eslint": "^7.20.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "npm:mysql2@^2.2.5",
    "nocache": "^2.1.0",
    "nodemon": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.3.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.31",
    "typeorm-typedi-extensions": "^0.4.0",
    "typescript": "^4.2.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.31",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "husky": "2.3.0",
    "lint-staged": "^10.5.4",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.9",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "typeorm-fixtures-cli": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint"
  }
}
